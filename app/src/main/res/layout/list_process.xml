<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:id="@+id/cardviewya2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:src="@drawable/labrador_retriever"
                android:padding="4dp" />

            <TextView
                android:id="@+id/text_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@id/imageView"
                android:text="รับเรื่องแล้ว"
                android:background="@color/colorPrimary"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/text_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@id/textStatusOn"
                android:text=" 10 วัน"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/textStatusOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/imageView"
                android:layout_below="@id/text_status"
                android:text="ผู้ส่ง : "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/text_name_u"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/textStatusOn"
                android:layout_below="@id/text_status"
                android:text="์nitsarut"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />


            <ImageView
                android:layout_marginTop="10dp"
                android:layout_below="@id/text_name_u"
                android:id="@+id/imageView23"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/imageView"
                app:srcCompat="@drawable/minimap" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_marginTop="10dp"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="60dp"
                android:layout_below="@id/text_name_u"
                android:layout_toRightOf="@+id/imageView23"
                app:srcCompat="@drawable/camera1" />



        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
