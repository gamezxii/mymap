<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark" />



    <TextView
        android:layout_margin="10dp"
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:orientation="vertical">


        <ImageButton
            android:id="@+id/takephoto1"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginTop="100dp"
            android:onClick="takeCapture"
            android:background="@color/colorwhite"
            app:srcCompat="@mipmap/camera220"
            />

        <TextView
            android:id="@+id/nametextreport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/report"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            />


        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginTop="100dp"
            android:onClick="getHistory"
            android:background="@color/colorwhite"
            app:srcCompat="@mipmap/ic_launcher_history220"
            />
        <TextView
            android:id="@+id/nametexthis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/reporthis"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"/>


    </LinearLayout>


</LinearLayout>
